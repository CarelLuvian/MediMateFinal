<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<HBox styleClass="dashboard-root" prefWidth="1280" prefHeight="800" xmlns="http://javafx.com/javafx/24.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Kalender.KalenderObatController" stylesheets="@../../css/styles.css">

    <!-- Main Content -->
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" prefWidth="1280" prefHeight="800">
        <VBox prefWidth="1280" prefHeight="800" spacing="30" styleClass="dashboard-content-inner" alignment="TOP_LEFT" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <VBox spacing="5">
                        <Label styleClass="font-h1" text="Kalender Obat" />
                    </VBox>
                    <Region HBox.hgrow="ALWAYS" />
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Label styleClass="label-subtitle" text="ID" />
                        <ImageView fitHeight="32" fitWidth="32" />
                    </HBox>
                </HBox>
                <!-- Tab Buttons -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <ToggleButton fx:id="mendatangTab" selected="true" styleClass="toggle-tab" text="Mendatang" />
                    <ToggleButton fx:id="yangLaluTab" styleClass="toggle-tab" text="Yang lalu" />
                    <ToggleButton fx:id="dibatalkanTab" styleClass="toggle-tab" text="Dibatalkan" />
                </HBox>
                <!-- Toolbar Bulan + Tombol + Jadwal -->
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="addScheduleButton" onAction="#handleAddSchedule" contentDisplay="RIGHT" prefHeight="36" prefWidth="100" styleClass="button-primary" text="+ Jadwal" />
                    <ComboBox fx:id="monthComboBox" prefWidth="120" promptText="Pilih Bulan" styleClass="combo-month" />
                </HBox>
                <!-- Jadwal Container -->
                <VBox fx:id="scheduleContainer" spacing="10" styleClass="card" VBox.vgrow="ALWAYS">
                    <!-- Jadwal items akan dimasukkan di sini -->
                </VBox>
            </VBox>
        </ScrollPane>
    </HBox>
