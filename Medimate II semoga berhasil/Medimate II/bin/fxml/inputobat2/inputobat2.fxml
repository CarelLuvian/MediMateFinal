<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox prefWidth="1280" prefHeight="800" spacing="0" stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/24.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.InputObat2.InputObat2Controller" styleClass="inputobat2-root">

    <!-- Main Content -->
    <AnchorPane fx:id="mainContentPane" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" styleClass="inputobat2-main-content">
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                    AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    styleClass="inputobat2-scroll-pane">
            <VBox alignment="CENTER" spacing="30" styleClass="inputobat2-content-wrapper" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <VBox prefWidth="1080" prefHeight="800" spacing="30" styleClass="inputobat2-content-inner" VBox.vgrow="ALWAYS">
                    <!-- Header -->
                    <HBox alignment="CENTER_LEFT" spacing="16">
                        <VBox spacing="6">
                            <Label styleClass="font-h1" text="Input Obat" />
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" />
                    </HBox>

                    <!-- Form Container -->
                    <VBox spacing="20" prefWidth="800" minWidth="200" maxWidth="1000" styleClass="card inputobat2-form-card" VBox.vgrow="ALWAYS">
                        <Label text="Jadwal Minum Obat" styleClass="font-h2" />
                        
                        <!-- Tanggal Mulai -->
                        <VBox spacing="8">
                            <Label text="Tanggal Mulai" styleClass="label-subtitle" />
                            <DatePicker fx:id="tanggalMulaiPicker" maxWidth="Infinity" styleClass="date-picker" />
                        </VBox>

                        <!-- Tanggal Selesai -->
                        <VBox spacing="8">
                            <Label text="Tanggal Selesai" styleClass="label-subtitle" />
                            <DatePicker fx:id="tanggalSelesaiPicker" maxWidth="Infinity" styleClass="date-picker" />
                        </VBox>

                        <!-- Waktu Minum -->
                        <VBox spacing="8">
                            <Label text="Waktu Minum" styleClass="label-subtitle" />
                            <TextField fx:id="waktuMinumField" promptText="Contoh: 08:00" maxWidth="Infinity" styleClass="text-field" />
                            <HBox spacing="8">
                                <Button text="06:00" onAction="#handlePresetWaktu" />
                                <Button text="12:00" onAction="#handlePresetWaktu" />
                                <Button text="18:00" onAction="#handlePresetWaktu" />
                                <Button text="21:00" onAction="#handlePresetWaktu" />
                            </HBox>
                        </VBox>

                        <!-- Reminder -->
                        <VBox spacing="8">
                            <Label text="Reminder" styleClass="label-subtitle" />
                            <ComboBox fx:id="reminderComboBox" promptText="Pilih reminder" maxWidth="Infinity" styleClass="combo-box" />
                        </VBox>

                        <!-- Catatan -->
                        <VBox spacing="8">
                            <Label text="Catatan" styleClass="label-subtitle" />
                            <TextArea fx:id="catatanArea" promptText="Tambahkan catatan..." prefRowCount="3" maxWidth="Infinity" styleClass="text-area" />
                        </VBox>

                        <!-- Tombol Simpan -->
                        <Button fx:id="simpanButton" text="Simpan" onAction="#handleSimpan" maxWidth="Infinity" prefHeight="40" styleClass="button-primary" />
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </AnchorPane>
</HBox> 