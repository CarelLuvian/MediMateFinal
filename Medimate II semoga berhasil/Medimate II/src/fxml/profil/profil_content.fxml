<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Profile.ProfileController"
            prefWidth="1280" prefHeight="800"
            AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
            AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
            stylesheets="@../../css/styles.css">

    <ScrollPane fitToWidth="true"
                styleClass="dashboard-scroll-pane"
                AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        
        <VBox alignment="CENTER" spacing="32" styleClass="dashboard-content-wrapper" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <VBox prefWidth="1080" prefHeight="800" spacing="32" styleClass="dashboard-content-inner" VBox.vgrow="ALWAYS">
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" spacing="16">
                    <VBox spacing="6">
                        <Label styleClass="font-h1" text="Profil" />
                    </VBox>
                    <Region HBox.hgrow="ALWAYS" />
                    <HBox alignment="CENTER_RIGHT" spacing="32">
                        <Label styleClass="label-subtitle" text="ID" />
                        <ImageView fx:id="avatarImageView" fitHeight="32" fitWidth="32" />
                    </HBox>
                </HBox>

                <!-- Profile Content -->
                <HBox spacing="32">
                    <!-- Left Column: Avatar & Basic Info -->
                    <VBox spacing="24" prefWidth="400" minWidth="200" maxWidth="600" styleClass="card" VBox.vgrow="ALWAYS">
                        <VBox alignment="CENTER" spacing="16">
                            <ImageView fx:id="profileImageView" fitHeight="120" fitWidth="120" styleClass="profile-avatar" />
                            <VBox alignment="CENTER" spacing="8">
                                <Label fx:id="profileNameLabel" text="Raden Carel" styleClass="font-h2" />
                                <Label fx:id="profileEmailLabel" text="raden.carel@email.com" styleClass="label-subtitle" />
                            </VBox>
                        </VBox>
                        <Separator />
                        <VBox spacing="16">
                            <Button fx:id="ubahFotoButton" text="Ubah Foto" styleClass="button-secondary" prefWidth="Infinity" onAction="#handleUbahFoto" />
                            <Button text="Ubah Password" styleClass="button-secondary" prefWidth="Infinity" onAction="#handleUbahPassword" />
                        </VBox>
                    </VBox>

                    <!-- Right Column: Detailed Info -->
                    <VBox spacing="24" prefWidth="600" minWidth="200" maxWidth="900" styleClass="card" VBox.vgrow="ALWAYS">
                        <Label text="Informasi Pribadi" styleClass="font-h2" />
                        
                        <VBox spacing="16">
                            <!-- Username -->
                            <VBox spacing="8">
                                <Label text="Username" styleClass="label-subtitle" />
                                <TextField fx:id="usernameField" text="raden_carel" maxWidth="Infinity" styleClass="text-field" />
                            </VBox>

                            <!-- Email -->
                            <VBox spacing="8">
                                <Label text="Email" styleClass="label-subtitle" />
                                <TextField fx:id="emailField" text="raden.carel@email.com" maxWidth="Infinity" styleClass="text-field" />
                            </VBox>

                            <!-- Phone -->
                            <VBox spacing="8">
                                <Label text="Nomor HP" styleClass="label-subtitle" />
                                <TextField fx:id="phoneField" text="+62 812-3456-7890" maxWidth="Infinity" styleClass="text-field" />
                            </VBox>

                            <!-- Date of Birth -->
                            <VBox spacing="8">
                                <Label text="Tanggal Lahir" styleClass="label-subtitle" />
                                <TextField fx:id="dobField" text="15 Januari 1995" maxWidth="Infinity" styleClass="text-field" />
                            </VBox>

                            <!-- Aktifkan Notifikasi -->
                            <VBox spacing="8">
                                <Label text="Aktifkan Notifikasi" styleClass="label-subtitle" />
                                <ToggleButton fx:id="notifToggle" text="" styleClass="switch-toggle" />
                            </VBox>
                        </VBox>

                        <Separator />

                        <!-- Save Button -->
                        <Button text="Simpan Perubahan" styleClass="button-primary" prefWidth="Infinity" prefHeight="40" onAction="#handleSimpanPerubahan" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>
