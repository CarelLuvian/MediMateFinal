<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Kalender.KalenderObatController"
            prefWidth="1280" prefHeight="800"
            AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
            AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
            stylesheets="@../../css/styles.css">

    <ScrollPane fitToWidth="true"
                styleClass="dashboard-scroll-pane"
                AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        
        <VBox alignment="CENTER" spacing="32" styleClass="dashboard-content-wrapper" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <VBox prefWidth="1080" prefHeight="800" spacing="32" styleClass="dashboard-content-inner" VBox.vgrow="ALWAYS">
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" spacing="16">
                    <VBox spacing="6">
                        <Label styleClass="label-title" text="Kalender Obat" />
                    </VBox>
                    <Region HBox.hgrow="ALWAYS" />
                    <HBox alignment="CENTER_RIGHT" spacing="16">
                        <Label styleClass="label-subtitle" text="ID" />
                        <ImageView fx:id="avatarImageView" fitHeight="32" fitWidth="32" />
                    </HBox>
                </HBox>

                <!-- Tab Buttons -->
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <ToggleButton fx:id="mendatangTab" selected="true" styleClass="button-primary" text="Mendatang" />
                    <ToggleButton fx:id="yangLaluTab" styleClass="button-secondary" text="Yang lalu" />
                </HBox>

                <!-- Toolbar: Tombol + Bulan -->
                <HBox alignment="CENTER_RIGHT" spacing="12">
                    <Button fx:id="addScheduleButton" onAction="#handleAddSchedule"
                            contentDisplay="RIGHT" prefHeight="36" prefWidth="100"
                            styleClass="button-primary" text="+ Jadwal" />
                    <ComboBox fx:id="monthComboBox" prefWidth="120" promptText="Pilih Bulan" styleClass="combo-month" />
                </HBox>

                <!-- Jadwal Container -->
                <VBox fx:id="scheduleContainer" spacing="12" styleClass="card" VBox.vgrow="ALWAYS">
                    <!-- Jadwal items akan dimasukkan di sini -->
                </VBox>
            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>
